          "name": "Unified Webhook - Paystack",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Paystack-Signature",
                "value": "your_webhook_signature_here"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gateway\": \"paystack\",\n  \"event\": \"charge.success\",\n  \"data\": {\n    \"reference\": \"ref_1234567890\",\n    \"amount\": 500000,\n    \"currency\": \"NGN\",\n    \"status\": \"success\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/unified",
              "host": ["{{baseUrl}}"],
