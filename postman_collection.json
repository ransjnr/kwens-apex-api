    {
      "name": "Payment Processing",
      "item": [
        {
          "name": "Process Payment - Stripe",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gateway\": \"stripe\",\n  \"amount\": 29.99,\n  \"currency\": \"USD\",\n  \"customerEmail\": \"customer@example.com\",\n  \"description\": \"Premium Plan Subscription\",\n  \"metadata\": {\n    \"orderId\": \"order_123\",\n    \"plan\": \"premium\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments/process",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "process"]
            }
          }
        },
