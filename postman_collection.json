          "name": "Unified Webhook - Stripe",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Stripe-Signature",
                "value": "whsec_your_webhook_secret_here"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gateway\": \"stripe\",\n  \"type\": \"payment_intent.succeeded\",\n  \"data\": {\n    \"object\": {\n      \"id\": \"pi_1234567890\",\n      \"amount\": 2999,\n      \"currency\": \"usd\",\n      \"status\": \"succeeded\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/unified",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "unified"]
            }
          }
        },
