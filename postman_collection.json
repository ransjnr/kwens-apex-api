    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Stripe Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Stripe-Signature",
                "value": "whsec_your_webhook_secret_here"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"payment_intent.succeeded\",\n  \"data\": {\n    \"object\": {\n      \"id\": \"pi_1234567890\",\n      \"amount\": 2999,\n      \"currency\": \"usd\",\n      \"status\": \"succeeded\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/stripe",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "stripe"]
            }
          }
        },
        {
          "name": "Paystack Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Paystack-Signature",
                "value": "your_webhook_signature_here"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"charge.success\",\n  \"data\": {\n    \"reference\": \"ref_1234567890\",\n    \"amount\": 500000,\n    \"currency\": \"NGN\",\n    \"status\": \"success\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/paystack",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "paystack"]
            }
          }
        },
